<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.SmsChartsDao">

	<select id="queryObject" resultType="io.renren.entity.SmsChartsEntity">
		select * from sms_charts where id = #{value}
	</select>

	<select id="queryList" resultType="io.renren.entity.SmsChartsEntity">
		select * from sms_charts 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sms_charts 
	</select>
	 
	<insert id="save" parameterType="io.renren.entity.SmsChartsEntity">
		insert into sms_charts
		(
			`id`, 
			`name`
		)
		values
		(
			#{id}, 
			#{name}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.entity.SmsChartsEntity">
		update sms_charts 
		<set>
			<if test="name != null">`name` = #{name}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sms_charts where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sms_charts where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>